<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="my-persistence-unit" transaction-type="RESOURCE_LOCAL">

        <!--
            Указываем класс провайдера JPA. Мы используем EclipseLink.
            Spring будет использовать этот класс для создания EntityManagerFactory.
        -->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!--
            Здесь мы должны перечислить все наши классы, помеченные аннотацией @Entity.
            Это говорит провайдеру JPA, какими классами он должен управлять.
        -->
        <class>org.itmo.model.Route</class>
        <class>org.itmo.model.Coordinates</class>
        <class>org.itmo.model.Location</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/studs"/>

            <property name="jakarta.persistence.jdbc.user" value="sXXXXXX"/>

            <property name="jakarta.persistence.jdbc.password" value="your_password"/>

            <property name="eclipselink.logging.level" value="FINE"/>

            <property name="eclipselink.ddl-generation" value="none"/>

            <property name="eclipselink.weaving" value="static"/>

        </properties>

    </persistence-unit>
</persistence>